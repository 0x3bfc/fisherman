{
    "manifest_version": 2,
    "name": "IPFS Gateway Redirect WX",
    "version" : "2.0.0",

    "description": "Access IPFS resources via custom HTTP2IPFS gateway",
    "homepage_url": "https://github.com/lidel/ipfs-firefox-addon",
    "icons": {
        "48": "icons/ipfs-logo-on.svg"
    },

    "permissions": [
        "<all_urls>",
        "notifications",
        "storage",
        "webRequest",
        "webRequestBlocking"
    ],

    "background": {
        "page": "background/init.html"
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": "icons/ipfs-logo-off.svg",
        "default_title": "IPFS Gateway Redirect",
        "default_popup": "popup/button-menu.html"
    },

    "options_ui": {
        "page": "options/options.html"
    },

    "web_accessible_resources": [
        "data/linkify-demo.html",
        "icons/ipfs-logo-on.svg",
        "icons/ipfs-logo-off.svg"
    ],

    "content_security_policy": "script-src 'self' 'unsafe-eval' https://ipfs.io/ipfs/QmP3fUQAVpvbP3pM47byDa3QRsUbvMztk1F48UU85kgGSW; object-src 'self'",

    "default_locale": "en"
}
