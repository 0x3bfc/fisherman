{
  "license": "CC0-1.0",
  "homepage": "https://github.com/lidel/ipfs-firefox-addon",
  "repository": {
    "type": "git",
    "url": "https://github.com/lidel/ipfs-firefox-addon.git"
  },
  "scripts": {
    "prebuild": "cp node_modules/is-ipfs/dist/index.min.js ext/src/lib/npm/is-ipfs.min.js && cp node_modules/ipfs-api/dist/index.min.js ext/src/lib/npm/ipfs-api.min.js",
    "build": "web-ext build --source-dir=ext/ --artifacts-dir=web-ext-artifacts/",
    "format": "standard --fix ext/src/*/*.js",
    "lint": "standard ext/src/*/*.js",
    "start": "web-ext run --source-dir=ext/",
    "test": "web-ext lint --source-dir=ext/"
  },
  "pre-push": [
    "build", "test", "lint"
  ],
  "standard": {
    "ignore": [
      "ext/lib/npm/**"
    ]
  },
  "devDependencies": {
    "pre-commit": "^1.1.3",
    "pre-push": "^0.1.1",
    "standard": "^8.5.0",
    "web-ext": "^1.6.0"
  },
  "dependencies": {
    "ipfs-api": "^9.0.0",
    "is-ipfs": "^0.2.0"
  }
}
