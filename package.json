{
  "license": "CC0-1.0",
  "homepage": "https://github.com/lidel/ipfs-firefox-addon",
  "repository": {
    "type": "git",
    "url": "https://github.com/lidel/ipfs-firefox-addon.git"
  },
  "scripts": {
    "build": "web-ext build --source-dir=web-ext-src/ --artifacts-dir=web-ext-artifacts/",
    "format": "standard --fix web-ext-src/*/*.js",
    "lint": "standard web-ext-src/*/*.js",
    "firefox": "web-ext run --source-dir=web-ext-src/",
    "test": "web-ext lint --source-dir=web-ext-src/"
  },
  "pre-push": [
    "build", "test", "lint"
  ],
  "standard": {
    "ignore": [
      "web-ext-src/lib/npm/**"
    ]
  },
  "devDependencies": {
    "pre-commit": "^1.1.3",
    "pre-push": "^0.1.1",
    "standard": "^8.5.0",
    "web-ext": "^1.6.0"
  },
  "dependencies": {
    "ipfs-api": "^9.0.0",
    "is-ipfs": "^0.2.0"
  }
}
